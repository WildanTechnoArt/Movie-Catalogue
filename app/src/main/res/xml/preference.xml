<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Notifications">

        <SwitchPreference
                android:defaultValue="false"
                android:key="@string/key_daily_reminder"
                android:summary="@string/turn_on_off_daily_reminder"
                android:title="@string/daily_reminder"/>

        <SwitchPreference
                android:defaultValue="false"
                android:key="@string/key_upcoming_reminder"
                android:summary="@string/turn_on_off_upcoming_reminder"
                android:title="Upcoming Reminder"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings">

        <Preference
                android:key="@string/key_setting_locale"
                android:summary="@string/setting_locale"
                android:title="@string/change_your_localization"/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_main_actor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_marginEnd="@dimen/margin_normal_size"
            android:text="@string/main_actor"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/content_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAllCaps="true"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_actor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal_size"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_marginTop="@dimen/margin_normal_size"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_actor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_crew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:layout_marginEnd="@dimen/margin_normal_size"
            android:text="@string/crew"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/content_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_main_actor"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="true"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_crew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_marginEnd="@dimen/margin_normal_size"
            android:layout_marginTop="@dimen/margin_normal_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_crew"/>

    <View
            android:id="@+id/line_content_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFC2C1C1"
            android:layout_marginTop="@dimen/margin_very_big_size"
            app:layout_constraintTop_toBottomOf="@+id/rv_crew"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tv_recommended"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_marginEnd="@dimen/margin_normal_size"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:text="@string/recommended"
            android:textSize="@dimen/content_text_size"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_content_one"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recommended"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_marginEnd="@dimen/margin_normal_size"
            android:layout_marginTop="@dimen/margin_normal_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_recommended"/>

</androidx.constraintlayout.widget.ConstraintLayout>
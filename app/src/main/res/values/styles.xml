<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CodeButton" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:text">@string/more_info</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingEnd">@dimen/margin_normal_size</item>
        <item name="android:paddingStart">@dimen/margin_normal_size</item>
        <item name="android:layout_marginStart">@dimen/margin_normal_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_small_size</item>
        <item name="android:layout_marginTop">@dimen/margin_normal_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal_size</item>
        <item name="android:background">@drawable/item_detail_hover</item>
    </style>

</resources>